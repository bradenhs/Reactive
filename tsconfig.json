{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "~/*": [ "src/*" ]
    },
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "experimentalDecorators": true
  }
}